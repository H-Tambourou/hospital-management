{
    "env": {
        "browser": true,
        "es2021": true
    },
    "parser":"babel-eslint",
    "extends": [
        "airbnb",
        "plugin:react/recommended",
        "prettier"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": "warn",
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "react/state-in-constructor": "off"
    },
    "settings": {
        "react": {
          "version": "detect"
        }
      }
}
